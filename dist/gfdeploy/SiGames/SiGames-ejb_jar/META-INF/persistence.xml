<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="SiGames-ejbPU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>SIGames</jta-data-source>
    <class>br.com.sigames.ejb.entidades.Cliente</class>
    <class>br.com.sigames.ejb.entidades.Documento</class>
    <class>br.com.sigames.ejb.entidades.Endereco</class>
    <class>br.com.sigames.ejb.entidades.Fornecedor</class>
    <class>br.com.sigames.ejb.entidades.ItemVenda</class>
    <class>br.com.sigames.ejb.entidades.Parcela</class>
    <class>br.com.sigames.ejb.entidades.ParcelaVenda</class>
    <class>br.com.sigames.ejb.entidades.Pessoa</class>
    <class>br.com.sigames.ejb.entidades.Produto</class>
    <class>br.com.sigames.ejb.entidades.Telefone</class>
    <class>br.com.sigames.ejb.entidades.TipoDocumento</class>
    <class>br.com.sigames.ejb.entidades.TipoLogradouro</class>
    <class>br.com.sigames.ejb.entidades.TipoTelefone</class>
    <class>br.com.sigames.ejb.entidades.Uf</class>
    <class>br.com.sigames.ejb.entidades.Venda</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.query-results-cache" value="false"/>
      <property name="eclipselink.cache.shared.default" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
